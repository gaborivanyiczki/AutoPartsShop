@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <li><a href="#" style="text-decoration: none"><i class="fa fa-heart" style="font-size: 20px; color: red"></i></a></li>
        <li class="dropdown-pane">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-user" style="font-size: 20px; color: #de483d"></i> Contul meu </a>
                <ul class="dropdown-menu dropdown-menu-right" style="right: 30px; border-radius: 10px;">
                    <li class="list-group-item active"><b>Bine ai venit, @User.Identity.GetUserName() !</b></li>
                    <li class="dropdown-header" style="margin-left: 4px;">Informații personale</li> 
                    <li><a href="#"><i class="glyphicon glyphicon-list-alt"></i> Comenzile mele</a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-credit-card"></i> Cardurile mele</a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-heart"></i> Favorite</a></li>
                    <li class="dropdown-header" style="margin-left: 4px;">Setări cont</li> 
                    <li><a href="@Url.Action("Index","Manage")"><i class="glyphicon glyphicon-user"></i> Date personale</a></li>
                    <li><a href="@Url.Action("ChangePassword","Manage")"><i class="glyphicon glyphicon-lock"></i> Resetare parolă</a></li>
                    <li><a href="@Url.Action("ChangePassword","Manage")"><i class="glyphicon glyphicon-cog"></i> Setări</a></li>
                    <li class="dropdown-header" style="margin-left: 4px;">Acțiuni</li> 
                    <li class="list-group-item list-group-item-danger"><a href="javascript:document.getElementById('logoutForm').submit()"><i class="glyphicon glyphicon-log-out"></i> Logout</a></li>
                </ul>
        </li>

      
   
    }
}
else
{
    <li class="dropdown">
  
        <a class="dropdown-toggle" data-toggle="dropdown" style="text-decoration: none" href="#"><i class="fa fa-heart" style="font-size: 20px; color: red"></i></a>
        <ul class="dropdown-menu dropdown-menu-right" style="right: 30px; min-width: 246px; text-align: center; border-radius: 10px;">
            <li><b>Trebuie să te autentifici pentru a adăuga produs la favorite</b></li>
            <li><button class="button-animated" onclick="location.href='@Url.Action("Login", "Account")'"><span style="font-weight: bold;"><b>Autentificare</b> </span></button></li>
        </ul>  
    </li>
    <li class="dropdown">
  
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-user" style="font-size: 20px; color: #de483d"></i></a>
            <ul class="dropdown-menu dropdown-menu-right" style="right: 30px; border-radius: 10px;">           
                <li><a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in" style="font-size: 20px; color: #de483d"></i> Autentificare</a></li>
                <li><a href="@Url.Action("Register", "Account")"><i class="fa fa-user-plus" style="font-size: 20px; color: #de483d"></i> Inregistrare</a></li>
            </ul>
     
    </li>

}
